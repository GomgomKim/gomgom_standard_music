<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    >
    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        >
        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/btn_close"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hello_layout"
        android:layout_below="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="60dp"
        android:paddingLeft="48dp"
        android:paddingRight="24dp"
        >
        <RelativeLayout
            android:id="@+id/hello_text_layout"
            android:layout_toLeftOf="@+id/hello_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/hello_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="빠른 회원 가입"
                android:fontFamily="@font/notosanskr_light"
                android:textSize="32dp"
                android:textColor="#454545"
                android:includeFontPadding="false"
                />

            <LinearLayout
                android:id="@+id/hello_text2"
                android:layout_below="@+id/hello_text1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오래 걸리지 않아요~ 2분이면"
                    android:fontFamily="@font/notosanskr_regular"
                    android:textColor="#454545"
                    android:textSize="14dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OK!"
                    android:fontFamily="@font/notosanskr_regular"
                    android:textColor="#ce4ce4"
                    android:textSize="14dp"
                    />

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/hello_img"
            android:layout_alignParentRight="true"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_below="@+id/hello_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:layout_marginTop="24dp"
        >

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/edgecc"
            android:editable="true"
            tools:ignore="Deprecated"
            android:fontFamily="@font/notosanskr_regular"
            android:textSize="18dp"
            android:textColor="#222222"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="15dp"
            android:hint="이름"
            android:textColorHint="#a7a7a7"
            />

        <TextView
            android:id="@+id/user_id"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/edgecc"
            android:editable="true"
            tools:ignore="Deprecated"
            android:fontFamily="@font/notosanskr_regular"
            android:textSize="18dp"
            android:textColor="#222222"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="15dp"
            android:hint="아이디"
            android:textColorHint="#a7a7a7"
            />

        <TextView
            android:id="@+id/user_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/edgecc"
            android:editable="true"
            tools:ignore="Deprecated"
            android:fontFamily="@font/notosanskr_regular"
            android:textSize="18dp"
            android:textColor="#222222"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="15dp"
            android:hint="비밀번호"
            android:textColorHint="#a7a7a7"
            android:password="true"
            />

        <TextView
            android:id="@+id/user_password_check"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/edgecc"
            android:editable="true"
            tools:ignore="Deprecated"
            android:fontFamily="@font/notosanskr_regular"
            android:textSize="18dp"
            android:textColor="#222222"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="15dp"
            android:hint="비밀번호확인"
            android:textColorHint="#a7a7a7"
            android:password="true"
            />

        <TextView
            android:id="@+id/user_phone_num"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/edgecc"
            android:editable="true"
            tools:ignore="Deprecated"
            android:fontFamily="@font/notosanskr_regular"
            android:textSize="18dp"
            android:textColor="#222222"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="15dp"
            android:hint="- 제외한 휴대폰 번호"
            android:textColorHint="#a7a7a7"
            />

        <TextView
            android:id="@+id/user_nickname"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/edgecc"
            android:editable="true"
            tools:ignore="Deprecated"
            android:fontFamily="@font/notosanskr_regular"
            android:textSize="18dp"
            android:textColor="#222222"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="15dp"
            android:hint="닉네임"
            android:textColorHint="#a7a7a7"
            />

        <RelativeLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#ce4ce4"
            >
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="회원 가입"
                android:textColor="#ffffff"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosanskr_medium"
                android:textSize="17dp"
                android:drawableRight="@drawable/ic_login_resize"
                />
        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>